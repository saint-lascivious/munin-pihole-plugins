# munin-pihole-plugins version
# must follow 8 character major.minor.micro scheme
# shellcheck disable=SC2034
VERSION="07.09.00"

# shellcheck disable=SC2207
_munin-pihole-plugins() {
    local cur allopts lolopts_help longopts \
        longopts_help longopts_installuninstall longopts_show \
        opts_branch opts_dnsserver opts_help opts_holdduration \
        opts_installuninstall opts_muninversion opts_show opts_truefalse \
        opts_variables opts_verbositylevel prev prev2 shortopts shortopts_help \
        shortopts_installuninstall shortopts_show
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    prev2="${COMP_WORDS[COMP_CWORD-2]}"
    case "${prev}" in
        "munin-pihole-plugins")
            allopts="-c configure --configure -h help --help -i install --install -s show --show -u uninstall --uninstall -v version --version"
            longopts="--configure --help --install --show --uninstall --version"
            shortopts="-c -h -i -s -u -v"
            case "${cur}" in
                --*)
                    COMPREPLY=( $(compgen -W "${longopts}" -- "${cur}") )
                ;;
                -*)
                    COMPREPLY=( $(compgen -W "${shortopts} ${longopts}" -- "${cur}") )
                ;;
                *)
                    COMPREPLY=( $(compgen -W "${allopts}" -- "${cur}") )
            esac
        ;;
        "-c"|"configure"|"--configure")
            opts_variables="BRANCH DNS_PORT DNS_SERVER HOLD_DURATION IGNORE_PIHOLE_ON_HOST INSTALL_PLUGINS INSTALL_SCRIPT LIGHTTPD_WEBROOT INSTALL_WEBSERVER MUNIN_DIR MUNIN_CONFIG_DIR MUNIN_PLUGIN_DIR MUNIN_VERSION NODE_PLUGIN_DIR PLUGIN_CONFIG_DIR PLUGIN_LIST PROXY_CONFIG_DIR SCRIPT_DIR SHOW_COLOR SKIP_DEPENDENCY_CHECK UPDATE_SELF VERBOSITY_LEVEL"
            if [[ "${prev2}" != "-h" ]] && [[ "${prev2}" != "help" ]] && [[ "${prev2}" != "--help" ]]; then
                COMPREPLY=( $(compgen -W "${opts_variables}" -- "${cur}") )
            fi
        ;;
       "-h")
            shortopts_help="-c -h -i -s -u -v"
            if [[ "${prev2}" != "-h" ]] && [[ "${prev2}" != "help" ]] && [[ "${prev2}" != "--help" ]]; then
                COMPREPLY=( $(compgen -W "${shortopts_help}" -- "${cur}") )
            fi
        ;;
        "help")
            opts_help="configure help install show uninstall version"
            if [[ "${prev2}" != "-h" ]] && [[ "${prev2}" != "help" ]] && [[ "${prev2}" != "--help" ]]; then
                COMPREPLY=( $(compgen -W "${opts_help}" -- "${cur}") )
            fi
        ;;
        "--help")
            longopts_help="--configure --help --install --show --uninstall --version"
            if [[ "${prev2}" != "-h" ]] && [[ "${prev2}" != "help" ]] && [[ "${prev2}" != "--help" ]]; then
                COMPREPLY=( $(compgen -W "${longopts_help}" -- "${cur}") )
            else
                lolopts_help="--i\\'ve-fallen-and-i-can\\'t-get-up"
                COMPREPLY=( $(compgen -W "${lolopts_help}" -- "${cur}") )
            fi
        ;;
        "-i"|"-u")
            shortopts_installuninstall="-p -P -s -S -w -W"
            COMPREPLY=( $(compgen -W "${shortopts_installuninstall}" -- "${cur}") )
        ;;
        "-s")
            shortopts_show="-c -l -w"
            COMPREPLY=( $(compgen -W "${shortopts_show}" -- "${cur}") )
        ;;
        "install"|"uninstall")
            opts_installuninstall="plugins plugins-only script script-only webserver webserver-only"
            COMPREPLY=( $(compgen -W "${opts_installuninstall}" -- "${cur}") )
        ;;
        "show")
            opts_show="conditions liability warranty"
            COMPREPLY=( $(compgen -W "${opts_show}" -- "${cur}") )
        ;;
        "--install"|"--uninstall")
            longopts_installuninstall="--plugins --plugins-only --script --script-only --webserver --webserver-only"
            COMPREPLY=( $(compgen -W "${longopts_installuninstall}" -- "${cur}") )
        ;;
        "--show")
            longopts_show="--conditions --liability --warranty"
            COMPREPLY=( $(compgen -W "${longopts_show}" -- "${cur}") )
        ;;
        "BRANCH")
            opts_branch="development master RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_branch}" -- "${cur}") )
            fi
        ;;
        "DNS_PORT"|"EXTERNAL_CONFIG_DIR"|"EXTERNAL_CONFIG_FILE"|"MUNIN_DIR"|"MUNIN_CONFIG_DIR"|"MUNIN_PLUGIN_DIR"|"NODE_PLUGIN_DIR"|"PLUGIN_CONFIG_DIR"|"PLUGIN_LIST"|"PROXY_CONFIG_DIR"|"SCRIPT_DIR")
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "RESET" -- "${cur}") )
            fi
        ;;
        "DNS_SERVER")
            opts_dnsserver="CLOUDFLARE COMODO GOOGLE LOCALHOST QUAD9 RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_dnsserver}" -- "${cur}") )
            fi
        ;;
        "HOLD_DURATION")
            opts_holdduration="0 1 2 3 4 5 RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_holdduration}" -- "${cur}") )
            fi
        ;;
        "IGNORE_PIHOLE_ON_HOST"|"INSTALL_PLUGINS"|"INSTALL_SCRIPT"|"INSTALL_WEBSERVER"|"SHOW_COLOR"|"SKIP_DEPENDENCY_CHECK"|"UPDATE_SELF")
            opts_truefalse="true false RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_truefalse}" -- "${cur}") )
            fi
        ;;
        "MUNIN_VERSION")
            opts_muninversion="latest stable"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_muninversion}" -- "${cur}") )
            fi
        ;;
        "VERBOSITY_LEVEL")
            opts_verbositylevel="0 1 2 3 4 RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_verbositylevel}" -- "${cur}") )
            fi
        ;;
        *)
            return 1
        ;;
    esac
    return 0
}

complete -F _munin-pihole-plugins munin-pihole-plugins
