#!/usr/bin/env bash

# munin-pihole-plugins
# saint-lascivious (Hayden Pearce) 2022
# saint@sainternet.xyz

# shellcheck disable=SC2034,SC2207

VERSION="07.02.00"

_munin-pihole-plugins() {
    local cur allopts lolopts_help longopts longopts_help longopts_installuninstall opts_branch opts_dnsserver opts_help opts_installuninstall opts_muninversion opts_truefalse opts_variables opts_verbositylevel prev prev2 shortopts shortopts_help shortopts_installuninstall
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    prev2="${COMP_WORDS[COMP_CWORD-2]}"
    case "${prev}" in
        "munin-pihole-plugins")
            allopts="-c configure --configure -h help --help -i install --install -u uninstall --uninstall -v version --version"
            longopts="--help --install --uninstall --variables --version"
            shortopts="-c -h -i -u -v"
            case "${cur}" in
                --*)
                    COMPREPLY=( $(compgen -W "${longopts}" -- "${cur}") )
                ;;
                -*)
                    COMPREPLY=( $(compgen -W "${shortopts} ${longopts}" -- "${cur}") )
                ;;
                *)
                    COMPREPLY=( $(compgen -W "${allopts}" -- "${cur}") )
            esac
        ;;
        "-c"|"configure"|"--configure")
            opts_variables="BRANCH DNS_PORT DNS_SERVER INSTALL_PLUGINS INSTALL_SCRIPT LIGHTTPD_WEBROOT INSTALL_WEBSERVER MUNIN_DIR MUNIN_CONFIG_DIR MUNIN_PLUGIN_DIR MUNIN_VERSION NODE_PLUGIN_DIR PLUGIN_CONFIG_DIR PLUGIN_LIST PROXY_CONFIG_DIR SCRIPT_DIR SHOW_COLOR SKIP_DEPENDENCY_CHECK UPDATE_SELF VERBOSITY_LEVEL"
            if [[ "${prev2}" != *h ]]; then
                COMPREPLY=( $(compgen -W "${opts_variables}" -- "${cur}") )
            fi
        ;;
       "-h")
            shortopts_help="-c -h -i -u -v"
            if [[ "${prev2}" != *h ]]; then
                COMPREPLY=( $(compgen -W "${shortopts_help}" -- "${cur}") )
            fi
        ;;
        "help")
            opts_help="help install uninstall variables version"
            if [[ "${prev2}" != *help ]]; then
                COMPREPLY=( $(compgen -W "${opts_help}" -- "${cur}") )
            fi
        ;;
        "--help")
            lolopts_help="--I\\'ve-fallen-and-I-can\\'t-get-up"
            longopts_help="--help --install --uninstall --variables --version"
            if [[ "${prev2}" != *help ]]; then
                COMPREPLY=( $(compgen -W "${longopts_help}" -- "${cur}") )
            else
                COMPREPLY=( $(compgen -W "${lolopts_help}" -- "${cur}") )
            fi
        ;;
        "-i"|"-u")
            shortopts_installuninstall="-p -P -s -S -w -W"
            COMPREPLY=( $(compgen -W "${shortopts_installuninstall}" -- "${cur}") )
        ;;
        "install"|"uninstall")
            opts_installuninstall="plugins plugins-only script script-only webserver webserver-only"
            COMPREPLY=( $(compgen -W "${opts_installuninstall}" -- "${cur}") )
        ;;
        "--install"|"--uninstall")
            longopts_installuninstall="--plugins --plugins-only --script --script-only --webserver --webserver-only"
            COMPREPLY=( $(compgen -W "${longopts_installuninstall}" -- "${cur}") )
        ;;
        "BRANCH")
            opts_branch="development master RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_branch}" -- "${cur}") )
            fi
        ;;
        "DNS_PORT"|"EXTERNAL_CONFIG_DIR"|"EXTERNAL_CONFIG_FILE"|"MUNIN_DIR"|"MUNIN_CONFIG_DIR"|"MUNIN_PLUGIN_DIR"|"NODE_PLUGIN_DIR"|"PLUGIN_CONFIG_DIR"|"PLUGIN_LIST"|"PROXY_CONFIG_DIR"|"SCRIPT_DIR")
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "RESET" -- "${cur}") )
            fi
        ;;
        "DNS_SERVER")
            opts_dnsserver="CLOUDFLARE COMODO GOOGLE LOCALHOST QUAD9 RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_dnsserver}" -- "${cur}") )
            fi
        ;;
        "INSTALL_PLUGINS"|"INSTALL_SCRIPT"|"INSTALL_WEBSERVER"|"SHOW_COLOR"|"SKIP_DEPENDENCY_CHECK"|"UPDATE_SELF")
            opts_truefalse="true false RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_truefalse}" -- "${cur}") )
            fi
        ;;
        "MUNIN_VERSION")
            opts_muninversion="latest stable"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_muninversion}" -- "${cur}") )
            fi
        ;;
        "VERBOSITY_LEVEL")
            opts_verbositylevel="0 1 2 3 4 RESET"
            if [[ "${prev2}" == "-c" ]] || [[ "${prev2}" == "configure" ]] || [[ "${prev2}" == "--configure" ]]; then
                COMPREPLY=( $(compgen -W "${opts_verbositylevel}" -- "${cur}") )
            fi
        ;;
        *)
        return 1
        ;;
    esac
    return 0
}
complete -F _munin-pihole-plugins munin-pihole-plugins
